<div class="form__main">
  <form action="/user/register" id="form__register" class="form__register" method="POST">
    <input class="form__register__input" type="text" name="firstName" placeholder="Имя">
    <input class="form__register__input" type="text" name="secondName" placeholder="Фамилия">
    <input class="form__register__input" type="email" name="email" placeholder="Ваш email">
    <input class="form__register__input" type="password" name="password" placeholder="Ваш пароль">
    <input class="form__register__input" type="password" placeholder="Ваш пароль повторите пожалуйста=)">
    <div class="form__action">
      <button type="button" id="login__start" class="form__register__logIn"> <a href="/user/login">Авторизация</a></button>
      <button  class="form__register__send">Зарегистрироваться</button>
    </div>
  </form>
</div>